<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer (background của progress bar) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Màu nền -->
        </shape>
    </item>

    <!-- Secondary progress (tiến trình phụ nếu cần) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#80E0E0E0" /> <!-- Màu tiến trình phụ -->
            </shape>
        </clip>
    </item>

    <!-- Progress (tiến trình chính) -->
    <item android:id="@android:id/progress">
        <clip>
            <bitmap
                android:src="@drawable/wifi_signal"
                android:tileMode="repeat" /> <!-- Ảnh WiFi được lặp lại -->
        </clip>
    </item>
</layer-list>
