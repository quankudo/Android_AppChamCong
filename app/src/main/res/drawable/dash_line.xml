<!-- res/drawable/dashed_line.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">
    <size
        android:height="1dp" /> <!-- Độ dày của đường -->

    <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt -->

    <stroke
        android:width="1dp"
        android:color="@color/gray"
        android:dashWidth="10dp"
        android:dashGap="20dp" /> <!-- Nét đứt -->
</shape>