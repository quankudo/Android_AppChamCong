<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.LayoutCreateJobStepFour"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" + Nhân viên của bạn sẽ gửi yêu cầu tham gia vào nhóm bằng cách quét mã QR code hoặc nhập mã code gồm 5 ký tự."
        android:textColor="@color/white"
        android:fontFamily="@font/lexend_deca_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca_light"
        android:layout_marginTop="5dp"
        android:text=" + Bạn có quyền chấp nhận hoặc từ chối yêu cầu tham gia vào nhóm của nhân viên."
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca_light"
        android:layout_marginTop="5dp"
        android:text=" + Tiền lương của nhân viên có thể chỉnh sửa trong lúc chấp nhận yêu cầu. "
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca_light"
        android:layout_marginTop="5dp"
        android:text=" + Toàn bộ quá trình sẽ có thông báo giúp bạn quản lý chặt chẽ hơn. "
        android:textColor="@color/white" />
<!--    QUYEN CHAM CONG CUA NHAN VIEN-->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_radio_group"
            android:orientation="vertical"
            >
            <!--CHI DUOC XEM CHAM CONG-->

                    <TextView
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quyền chấm công của nhân viên"
                        android:textColor="@color/white">
                    </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--chi duoc xem cham cong -->
            <LinearLayout
                android:id="@+id/viewOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chỉ được xem chấm công"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend_deca_light"
                        android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnViewOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <!--co the cham cong-->
            <LinearLayout
                android:id="@+id/capableOfTimekeeping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Có thể chấm công"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnCapableOfTimekeeping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>
    <!--CHAM CONG NHIEU LAN TRONG NGAY-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_radio_group"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chấm công nhiều lần trong ngày"
                android:textColor="@color/white">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--co -->
            <LinearLayout
                android:id="@+id/timekeepingMultipleTimesADay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Có"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnTimekeepingMultipleTimesADay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <!--khong-->
            <LinearLayout
                android:id="@+id/DontTimekeepingMultipleTimesADay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Không"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnDontTimekeepingMultipleTimesADay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>
    <!--Nhận thông báo khi nhân viên tạo: chấm công, ứng lương, tăng ca, phụ cấp,...-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_radio_group"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận thông báo khi nhân viên tạo: chấm công, ứng lương, tăng ca, phụ cấp,..."
                android:textColor="@color/white">
            </TextView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--co -->
            <LinearLayout
                android:id="@+id/ReceiveNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Có"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnReceiveNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <!--khong-->
            <LinearLayout
                android:id="@+id/dontReceiveNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Không"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radiobtnDontReceiveNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">

                </RadioButton>
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>
    <!--Quyền tạo mới chức năng cho nhân viên-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_radio_group"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
          >

            <TextView
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyền tạo mới chức năng cho nhân viên"
                android:paddingRight="15dp"
                android:textColor="@color/white">
            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--Nghi phep -->
            <LinearLayout
                android:id="@+id/onLeave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nghỉ phép"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <CheckBox
                    android:id="@+id/checkBoxOnLeave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">
                </CheckBox>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--Ứng lương -->
            <LinearLayout
                android:id="@+id/salaryAdvance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ứng lương"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <CheckBox
                    android:id="@+id/checkBoxsalaryAdvance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">
                </CheckBox>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--Tăng ca -->
            <LinearLayout
                android:id="@+id/overTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tăng ca"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <CheckBox
                    android:id="@+id/checkBoxOverTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">
                </CheckBox>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--Thưởng/Phụ cấp -->
            <LinearLayout
                android:id="@+id/bounus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thưởng/Phụ cấp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <CheckBox
                    android:id="@+id/checkBoxBounus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">
                </CheckBox>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <!--Trừ tiền -->
            <LinearLayout
                android:id="@+id/deductMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trừ tiền"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_light"
                    android:textColor="@color/white" />
                <CheckBox
                    android:id="@+id/checkBoxDeductMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/radio_btn_color">
                </CheckBox>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


