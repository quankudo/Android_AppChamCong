<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_light">

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/green"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_sdg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_32" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_sdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Ung luong"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout20"
        app:layout_constraintTop_toTopOf="@+id/linearLayout20" />

    <TextView
        android:id="@+id/desc_sdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Ung luong lan 1"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout20"
        app:layout_constraintStart_toEndOf="@+id/linearLayout20" />

    <TextView
        android:id="@+id/price_sdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-100,000d"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_sdg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_sdg" />

    <TextView
        android:id="@+id/date_sdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:53"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/desc_sdg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/desc_sdg" />
</androidx.constraintlayout.widget.ConstraintLayout>